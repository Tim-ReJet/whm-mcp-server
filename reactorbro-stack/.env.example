# ============================================
# ReactorJet Stack - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ============================================
# WordPress Configuration (Local Development)
# ============================================
# DDEV WordPress URL (auto-configured by DDEV)
WP_URL=https://reactorjet.ddev.site
WP_GRAPHQL_ENDPOINT=https://reactorjet.ddev.site/graphql

# WordPress Admin Credentials (Local)
WP_ADMIN_USER=admin
WP_ADMIN_PASSWORD=admin
WP_ADMIN_EMAIL=admin@example.com

# ============================================
# Cloudflare Pages Deployment (Astro)
# ============================================
# Get these from: https://dash.cloudflare.com/profile/api-tokens
CF_API_TOKEN=your_cloudflare_api_token_here
CF_ACCOUNT_ID=your_cloudflare_account_id_here
CF_PROJECT_NAME=your_cloudflare_pages_project_name

# Production WordPress GraphQL endpoint (used by Astro in production)
CF_WP_GRAPHQL_URL=https://your-production-domain.com/graphql

# ============================================
# VPS WordPress Deployment
# ============================================
# SSH connection details for rsync deployment
WP_DEPLOY_HOST=your-vps-ip-or-domain.com
WP_DEPLOY_USER=deploy
WP_DEPLOY_PORT=22
WP_DEPLOY_PATH=/var/www/your-site/wp-content

# SSH Key for deployment (base64 encoded private key)
WP_DEPLOY_SSH_KEY=your_base64_encoded_ssh_private_key_here

# ============================================
# Production WordPress Database (VPS)
# ============================================
WP_PROD_DB_NAME=wordpress_production
WP_PROD_DB_USER=wordpress_user
WP_PROD_DB_PASSWORD=secure_password_here
WP_PROD_DB_HOST=localhost
WP_PROD_DB_PREFIX=wp_

# WordPress Authentication Unique Keys and Salts
# Generate these from: https://api.wordpress.org/secret-key/1.1/salt/
WP_AUTH_KEY=your_unique_auth_key_here
WP_SECURE_AUTH_KEY=your_unique_secure_auth_key_here
WP_LOGGED_IN_KEY=your_unique_logged_in_key_here
WP_NONCE_KEY=your_unique_nonce_key_here
WP_AUTH_SALT=your_unique_auth_salt_here
WP_SECURE_AUTH_SALT=your_unique_secure_auth_salt_here
WP_LOGGED_IN_SALT=your_unique_logged_in_salt_here
WP_NONCE_SALT=your_unique_nonce_salt_here

# ============================================
# Optional: Cloudflare R2 Media Offload
# ============================================
# If using WP Offload Media Lite plugin with R2
R2_BUCKET_NAME=your_r2_bucket_name
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_REGION=auto

# ============================================
# Optional: Cloudflare Access
# ============================================
# To lock down /wp-admin with Cloudflare Access
CF_ACCESS_POLICY_ID=your_access_policy_id
CF_ACCESS_TEAM_DOMAIN=your-team-domain.cloudflareaccess.com

# ============================================
# Development Settings
# ============================================
NODE_ENV=development
# NODE_ENV=production

# Enable WordPress debug mode (local only)
WP_DEBUG=true
WP_DEBUG_LOG=true
WP_DEBUG_DISPLAY=false

# ============================================
# CI/CD Secrets (GitHub Secrets)
# ============================================
# Add these as GitHub repository secrets:
# - CF_API_TOKEN
# - CF_ACCOUNT_ID
# - WP_DEPLOY_HOST
# - WP_DEPLOY_USER
# - WP_DEPLOY_SSH_KEY
# - WP_DEPLOY_PATH
