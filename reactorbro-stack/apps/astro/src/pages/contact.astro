---
import MainLayout from '../layouts/MainLayout.astro';

const contactInfo = {
  phone: '083 324 9054',
  email: 'marius@bergpartnerships.co.za',
  address: 'Pretoria, Gauteng, South Africa',
  hours: 'Monday - Friday: 8:00 AM - 5:00 PM',
};
---

<MainLayout title="Contact Us" description="Get in touch with Berg Projects - Professional construction and project management services. Call 083 324 9054 or email us today.">
  <!-- Page Header -->
  <section class="bg-gradient-to-br from-neutral-900 to-neutral-800 text-white py-20">
    <div class="container-responsive">
      <div class="max-w-4xl mx-auto text-center">
        <div class="inline-block mb-4">
          <span class="badge bg-primary-600 text-white text-sm px-4 py-2">
            Get In Touch
          </span>
        </div>
        <h1 class="text-5xl md:text-6xl font-bold mb-6">
          Contact Us
        </h1>
        <p class="text-xl text-neutral-300">
          Ready to start your project? We'd love to hear from you
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="section bg-white">
    <div class="container-responsive">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div class="order-2 lg:order-1">
          <div class="card">
            <h2 class="text-3xl font-bold text-neutral-900 mb-6">
              Send Us a Message
            </h2>
            <p class="text-neutral-600 mb-8">
              Fill out the form below and we'll get back to you within 24 hours
            </p>

            <form class="space-y-6" method="POST" action="/api/contact" id="contact-form">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="firstName" class="block text-sm font-medium text-neutral-700 mb-2">
                    First Name *
                  </label>
                  <input
                    type="text"
                    id="firstName"
                    name="firstName"
                    required
                    class="input w-full"
                    placeholder="John"
                  />
                </div>
                <div>
                  <label for="lastName" class="block text-sm font-medium text-neutral-700 mb-2">
                    Last Name *
                  </label>
                  <input
                    type="text"
                    id="lastName"
                    name="lastName"
                    required
                    class="input w-full"
                    placeholder="Doe"
                  />
                </div>
              </div>

              <div>
                <label for="email" class="block text-sm font-medium text-neutral-700 mb-2">
                  Email Address *
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="input w-full"
                  placeholder="john@example.com"
                />
              </div>

              <div>
                <label for="phone" class="block text-sm font-medium text-neutral-700 mb-2">
                  Phone Number
                </label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  class="input w-full"
                  placeholder="083 324 9054"
                />
              </div>

              <div>
                <label for="service" class="block text-sm font-medium text-neutral-700 mb-2">
                  Service Interested In
                </label>
                <select id="service" name="service" class="input w-full">
                  <option value="">Select a service...</option>
                  <option value="construction-management">Construction Management</option>
                  <option value="project-management">Project Management</option>
                  <option value="development-management">Development Management</option>
                  <option value="turnkey">Turnkey Design & Construct</option>
                  <option value="programme-management">Programme Management</option>
                  <option value="other">Other</option>
                </select>
              </div>

              <div>
                <label for="message" class="block text-sm font-medium text-neutral-700 mb-2">
                  Message *
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="6"
                  required
                  class="input w-full"
                  placeholder="Tell us about your project..."
                ></textarea>
              </div>

              <div class="flex items-start gap-3">
                <input
                  type="checkbox"
                  id="consent"
                  name="consent"
                  required
                  class="mt-1 w-4 h-4 text-primary-600 border-neutral-300 rounded focus:ring-primary-500"
                />
                <label for="consent" class="text-sm text-neutral-600">
                  I agree to be contacted by Berg Projects regarding my inquiry *
                </label>
              </div>

              <button type="submit" class="btn btn-primary w-full text-lg py-4">
                Send Message
              </button>

              <p class="text-sm text-neutral-500 text-center">
                * Required fields
              </p>
            </form>
          </div>
        </div>

        <!-- Contact Information -->
        <div class="order-1 lg:order-2 space-y-6">
          <div class="card bg-primary-50 border-l-4 border-primary-600">
            <h3 class="text-2xl font-bold text-neutral-900 mb-6">
              Contact Information
            </h3>
            <div class="space-y-6">
              <!-- Phone -->
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-primary-600 rounded-lg flex items-center justify-center text-white flex-shrink-0">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                </div>
                <div>
                  <div class="font-semibold text-neutral-900 mb-1">Phone</div>
                  <a href={`tel:${contactInfo.phone.replace(/\s/g, '')}`} class="text-neutral-600 hover:text-primary-600 transition-colors">
                    {contactInfo.phone}
                  </a>
                </div>
              </div>

              <!-- Email -->
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-primary-600 rounded-lg flex items-center justify-center text-white flex-shrink-0">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div>
                  <div class="font-semibold text-neutral-900 mb-1">Email</div>
                  <a href={`mailto:${contactInfo.email}`} class="text-neutral-600 hover:text-primary-600 transition-colors">
                    {contactInfo.email}
                  </a>
                </div>
              </div>

              <!-- Location -->
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-primary-600 rounded-lg flex items-center justify-center text-white flex-shrink-0">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div>
                  <div class="font-semibold text-neutral-900 mb-1">Location</div>
                  <div class="text-neutral-600">
                    {contactInfo.address}
                  </div>
                </div>
              </div>

              <!-- Hours -->
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-primary-600 rounded-lg flex items-center justify-center text-white flex-shrink-0">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <div>
                  <div class="font-semibold text-neutral-900 mb-1">Business Hours</div>
                  <div class="text-neutral-600">
                    {contactInfo.hours}
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Quick Response Box -->
          <div class="card bg-gradient-to-br from-primary-600 to-accent-600 text-white">
            <h3 class="text-2xl font-bold mb-3">
              Quick Response Guarantee
            </h3>
            <p class="text-primary-100 mb-4">
              We aim to respond to all inquiries within 24 hours during business days.
            </p>
            <div class="flex items-center gap-3 bg-white/10 backdrop-blur-sm rounded-lg p-4">
              <div class="text-3xl">âš¡</div>
              <div>
                <div class="font-semibold">24 Hour Response</div>
                <div class="text-sm text-primary-100">Monday - Friday</div>
              </div>
            </div>
          </div>

          <!-- Service Areas -->
          <div class="card">
            <h3 class="text-xl font-bold text-neutral-900 mb-4">
              Service Areas
            </h3>
            <div class="space-y-3">
              <div class="flex items-center gap-3">
                <div class="w-2 h-2 bg-primary-600 rounded-full"></div>
                <span class="text-neutral-700">Pretoria</span>
              </div>
              <div class="flex items-center gap-3">
                <div class="w-2 h-2 bg-primary-600 rounded-full"></div>
                <span class="text-neutral-700">Greater Gauteng Region</span>
              </div>
              <div class="flex items-center gap-3">
                <div class="w-2 h-2 bg-primary-600 rounded-full"></div>
                <span class="text-neutral-700">Western Cape</span>
              </div>
              <div class="flex items-center gap-3">
                <div class="w-2 h-2 bg-primary-600 rounded-full"></div>
                <span class="text-neutral-700">Across South Africa</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section -->
  <section class="section bg-neutral-50">
    <div class="container-responsive">
      <div class="card p-0 overflow-hidden">
        <div class="aspect-video bg-neutral-200 flex items-center justify-center">
          <div class="text-center">
            <svg class="w-16 h-16 text-neutral-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <p class="text-neutral-600">Serving Pretoria & Greater Gauteng Region</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="section bg-white">
    <div class="container-responsive">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-4xl font-bold text-neutral-900 mb-4">
            Frequently Asked Questions
          </h2>
          <p class="text-lg text-neutral-600">
            Quick answers to common questions
          </p>
        </div>

        <div class="space-y-4">
          <details class="card group">
            <summary class="cursor-pointer list-none flex items-center justify-between font-semibold text-neutral-900 text-lg">
              How quickly can you start my project?
              <svg class="w-5 h-5 text-neutral-400 group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </summary>
            <p class="mt-4 text-neutral-600 leading-relaxed">
              Project timelines vary based on scope and complexity. After our initial consultation, we can typically begin planning within 1-2 weeks and mobilize construction teams shortly after approvals are secured.
            </p>
          </details>

          <details class="card group">
            <summary class="cursor-pointer list-none flex items-center justify-between font-semibold text-neutral-900 text-lg">
              Do you provide free quotes?
              <svg class="w-5 h-5 text-neutral-400 group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </summary>
            <p class="mt-4 text-neutral-600 leading-relaxed">
              Yes, we provide detailed quotes at no obligation after an initial consultation to understand your project requirements. Our quotes include transparent pricing with no hidden costs.
            </p>
          </details>

          <details class="card group">
            <summary class="cursor-pointer list-none flex items-center justify-between font-semibold text-neutral-900 text-lg">
              What areas do you serve?
              <svg class="w-5 h-5 text-neutral-400 group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </summary>
            <p class="mt-4 text-neutral-600 leading-relaxed">
              We primarily serve Pretoria and the greater Gauteng region, but also work on projects throughout South Africa including Western Cape and other provinces.
            </p>
          </details>

          <details class="card group">
            <summary class="cursor-pointer list-none flex items-center justify-between font-semibold text-neutral-900 text-lg">
              Are you licensed and insured?
              <svg class="w-5 h-5 text-neutral-400 group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </summary>
            <p class="mt-4 text-neutral-600 leading-relaxed">
              Yes, we are fully licensed with registered Professional Construction Project Managers (Pr. CPM) and carry comprehensive insurance coverage for all our projects.
            </p>
          </details>
        </div>
      </div>
    </div>
  </section>
</MainLayout>

<script>
  // Form submission handling (placeholder)
  const form = document.getElementById('contact-form');
  if (form) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      alert('Thank you for your message! We will get back to you within 24 hours.');
      form.reset();
    });
  }
</script>
