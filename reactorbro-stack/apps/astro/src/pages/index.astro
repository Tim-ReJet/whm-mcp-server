---
import MainLayout from '../layouts/MainLayout.astro';
import AnimatedHero from '../components/animated/AnimatedHero.astro';
import AnimatedSection from '../components/animated/AnimatedSection.astro';
import AnimatedCard from '../components/animated/AnimatedCard.astro';
import AnimatedButton from '../components/animated/AnimatedButton.astro';

// Fetch content from WordPress REST API
const WP_URL = 'https://bergprojects.co.za';

// Fetch homepage content
let homeContent = {
  title: 'Berg Projects',
  tagline: 'Design ¬∑ Construction ¬∑ Project Management',
  description: 'Professional construction and project management services across South Africa'
};

try {
  const response = await fetch(`${WP_URL}/wp-json/wp/v2/pages?slug=home-02`);
  const data = await response.json();
  if (data.length > 0) {
    homeContent = {
      title: data[0].title.rendered || homeContent.title,
      description: data[0].excerpt.rendered.replace(/<[^>]*>/g, '') || homeContent.description,
      tagline: homeContent.tagline
    };
  }
} catch (error) {
  console.error('Error fetching WordPress content:', error);
}

const services = [
  {
    icon: 'üèóÔ∏è',
    title: 'Construction Management',
    description: 'Partnering with our clients, acting in their interest and managing every element of the project, from programme to cost.'
  },
  {
    icon: 'üìã',
    title: 'Project Management',
    description: 'Flexible and highly personalised service based on a robust and well-proven formula for delivery.'
  },
  {
    icon: 'üè¢',
    title: 'Development Management',
    description: 'Experience with development management and the project management function to assist with feasibility mapping.'
  },
  {
    icon: 'üîß',
    title: 'Turnkey Design & Construct',
    description: 'One point of contact with responsibility for design, construction, financial and quality control process.'
  }
];

const stats = [
  { value: '15+', label: 'Years Experience' },
  { value: '500+', label: 'Projects Completed' },
  { value: 'R1bn+', label: 'Value Delivered' },
  { value: '100%', label: 'Client Satisfaction' }
];
---

<MainLayout title="Home" description={homeContent.description}>
  <!-- Hero Section with Animated Components -->
  <AnimatedHero
    title="Building Excellence Since 2015"
    subtitle="Berg Projects"
    backgroundImage="https://images.unsplash.com/photo-1541888946425-d81bb19240f5?q=80&w=2000"
    height="large"
    parallax={true}
    overlayOpacity={0.7}
  >
    <p class="text-xl">
      {homeContent.tagline}
    </p>
    <p class="text-lg opacity-90">
      Professional construction and project management services serving Pretoria and the greater Gauteng region.
    </p>
    <div slot="cta">
      <AnimatedButton href="/contact" variant="primary" size="large" animation="ripple">
        Get Started ‚Üí
      </AnimatedButton>
      <AnimatedButton href="/projects" variant="outline" size="large" animation="lift">
        View Projects
      </AnimatedButton>
    </div>
  </AnimatedHero>

  <!-- Stats Section -->
  <section class="section bg-white border-b border-neutral-200">
    <div class="container-responsive">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        {stats.map((stat, index) => (
          <AnimatedCard
            animationType="scale"
            hoverEffect="lift"
            delay={index * 100}
            disableHover={false}
            class="text-center p-6 bg-transparent border-none shadow-none"
          >
            <div class="text-4xl md:text-5xl font-bold text-primary-600 mb-2">
              {stat.value}
            </div>
            <div class="text-sm text-neutral-600 font-medium">
              {stat.label}
            </div>
          </AnimatedCard>
        ))}
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="section bg-neutral-50">
    <div class="container-responsive">
      <AnimatedSection animationType="fade">
        <div class="text-center mb-16 max-w-3xl mx-auto">
          <div class="inline-block mb-4">
            <span class="badge bg-primary-100 text-primary-700 text-sm px-4 py-2">
              What We Do
