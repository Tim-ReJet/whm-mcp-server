---
import '../styles/global.css';
import { SITE_DESCRIPTION } from '../consts';

interface Props {
  title: string;
  description?: string;
}

const { title, description = SITE_DESCRIPTION } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | ReactorBro Docs</title>
  </head>
  <body class="min-h-screen bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100">
    <div class="flex min-h-screen">
      <!-- Sidebar -->
      <aside class="w-64 border-r border-gray-200 dark:border-gray-800 bg-gray-50 dark:bg-gray-900 p-6 fixed h-screen overflow-y-auto">
        <div class="mb-8">
          <a href="/" class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
            ReactorBro
          </a>
        </div>

        <nav class="space-y-2">
          <a href="/" class="block px-3 py-2 rounded hover:bg-gray-200 dark:hover:bg-gray-800">Home</a>
                 <a href="/docs/getting-started" class="block px-3 py-2 rounded hover:bg-gray-200 dark:hover:bg-gray-800">Getting Started</a>
                 <a href="/docs/architecture" class="block px-3 py-2 rounded hover:bg-gray-200 dark:hover:bg-gray-800">Architecture</a>
                 <a href="/docs/guides" class="block px-3 py-2 rounded hover:bg-gray-200 dark:hover:bg-gray-800">Guides</a>
                 <a href="/docs/workflow-examples" class="block px-3 py-2 rounded hover:bg-gray-200 dark:hover:bg-gray-800">Workflow Examples</a>
                 <a href="/docs/troubleshooting" class="block px-3 py-2 rounded hover:bg-gray-200 dark:hover:bg-gray-800">Troubleshooting</a>
                 <a href="/docs/api" class="block px-3 py-2 rounded hover:bg-gray-200 dark:hover:bg-gray-800">API Reference</a>
          <a href="/examples" class="block px-3 py-2 rounded hover:bg-gray-200 dark:hover:bg-gray-800">ğŸ’¡ Examples</a>
          <a href="/preview" class="block px-3 py-2 rounded hover:bg-gray-200 dark:hover:bg-gray-800">ğŸ‘ï¸ Preview</a>
          <a href="/workflows" class="block px-3 py-2 rounded hover:bg-gray-200 dark:hover:bg-gray-800">ğŸ”„ Workflows</a>
          <a href="/workflow-editor" class="block px-3 py-2 rounded hover:bg-gray-200 dark:hover:bg-gray-800">âœï¸ Editor</a>
          <a href="/workflow-debugger" class="block px-3 py-2 rounded hover:bg-gray-200 dark:hover:bg-gray-800">ğŸ› Debugger</a>
          <a href="/workflow-templates" class="block px-3 py-2 rounded hover:bg-gray-200 dark:hover:bg-gray-800">ğŸ“‹ Templates</a>
          <a href="/traces" class="block px-3 py-2 rounded hover:bg-gray-200 dark:hover:bg-gray-800">ğŸ” Traces</a>
          <a href="/deployments" class="block px-3 py-2 rounded hover:bg-gray-200 dark:hover:bg-gray-800">ğŸš€ Deployments</a>
          <a href="/performance" class="block px-3 py-2 rounded hover:bg-gray-200 dark:hover:bg-gray-800">âš¡ Performance</a>
          <a href="/search" class="block px-3 py-2 rounded hover:bg-gray-200 dark:hover:bg-gray-800">ğŸ” Search</a>
        </nav>

        <!-- Search -->
        <div class="mt-8">
          <input
            type="search"
            id="doc-search"
            placeholder="Search docs..."
            class="w-full px-4 py-2 border border-gray-300 dark:border-gray-700 rounded-lg bg-white dark:bg-gray-800"
          />
          <div id="search-results" class="mt-4"></div>
        </div>
      </aside>

      <!-- Main Content -->
      <main class="flex-1 ml-64">
        <div class="max-w-4xl mx-auto px-8 py-12">
          <slot />
        </div>
      </main>
    </div>

    <script>
      // Simple search functionality
      const searchInput = document.getElementById('doc-search');
      if (searchInput) {
        searchInput.addEventListener('keydown', (e) => {
          if (e.key === 'Enter') {
            const query = (e.target as HTMLInputElement).value;
            if (query) {
              window.location.href = `/search?q=${encodeURIComponent(query)}`;
            }
          }
        });
      }
    </script>
  </body>
</html>

