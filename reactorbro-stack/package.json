{
  "name": "reactorjet-stack",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "bootstrap": "pnpm install && turbo run build",
    "format": "pnpm biome format . --write || prettier -w .",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "playwright test",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "test:visual": "playwright test --grep visual",
    "test:accessibility": "playwright test --grep accessibility",
    "test:security": "playwright test --grep security",
    "test:enhanced": "playwright test --grep enhanced",
    "build": "turbo run build",
    "build:analyze": "pnpm -C apps/astro build:analyze",
    "build:metrics": "ts-node packages/scripts/src/build-metrics-cli.ts",
    "tokens": "pnpm -C packages/tokens build",
    "so": "ts-node packages/scripts/src/so.ts",
    "site": "ts-node packages/scripts/src/site-manager.ts",
    "site:list": "ts-node packages/scripts/src/site-manager.ts list",
    "site:info": "ts-node packages/scripts/src/site-manager.ts info",
    "site:use": "ts-node packages/scripts/src/site-manager.ts use",
    "site:create": "ts-node packages/scripts/src/site-manager.ts create",
    "site:dev": "ts-node packages/scripts/src/site-manager.ts dev",
    "site:build": "ts-node packages/scripts/src/site-manager.ts build",
    "site:active": "ts-node packages/scripts/src/site-manager.ts active",
    "generate:site": "ts-node packages/scripts/src/generate-site.ts",
    "agent": "ts-node packages/scripts/src/agent-cli.ts",
    "agent:list": "ts-node packages/scripts/src/agent-cli.ts list",
    "agent:info": "ts-node packages/scripts/src/agent-cli.ts info",
    "agent:run": "ts-node packages/scripts/src/agent-cli.ts run",
    "agent:workflow": "ts-node packages/scripts/src/agent-cli.ts workflow",
    "agent:status": "ts-node packages/scripts/src/agent-cli.ts status",
    "asset": "ts-node packages/scripts/src/asset-cli.ts",
    "asset:browse": "ts-node packages/scripts/src/asset-cli.ts browse",
    "asset:search": "ts-node packages/scripts/src/asset-cli.ts search",
    "asset:info": "ts-node packages/scripts/src/asset-cli.ts info",
    "asset:use": "ts-node packages/scripts/src/asset-cli.ts use",
    "asset:create": "ts-node packages/scripts/src/asset-cli.ts create",
    "asset:export": "ts-node packages/scripts/src/asset-cli.ts export",
    "asset:import": "ts-node packages/scripts/src/asset-cli.ts import",
    "asset:stats": "ts-node packages/scripts/src/asset-cli.ts stats",
    "observability": "ts-node packages/scripts/src/observability-cli.ts",
    "obs": "ts-node packages/scripts/src/observability-cli.ts",
    "dashboard": "ts-node packages/scripts/src/dashboard-cli.ts",
    "cli": "ts-node packages/scripts/src/interactive-cli.ts",
    "deploy": "ts-node packages/scripts/src/deployment-cli.ts",
    "deploy:detect": "ts-node packages/scripts/src/deployment-cli.ts detect",
    "deploy:deploy": "ts-node packages/scripts/src/deployment-cli.ts deploy",
    "deploy:validate": "ts-node packages/scripts/src/deployment-cli.ts validate",
    "deploy:test": "ts-node packages/scripts/src/deployment-cli.ts test",
    "deploy:health": "ts-node packages/scripts/src/deployment-cli.ts health",
    "deploy:rollback": "ts-node packages/scripts/src/deployment-cli.ts rollback",
    "deploy:status": "ts-node packages/scripts/src/deployment-cli.ts status",
    "deploy:list": "ts-node packages/scripts/src/deployment-cli.ts list",
    "populate-assets": "ts-node packages/scripts/src/populate-assets.ts",
    "docs": "pnpm -C apps/docs dev",
    "docs:build": "pnpm -C apps/docs build",
    "docs:preview": "pnpm -C apps/docs preview",
    "openapi:generate": "ts-node packages/scripts/src/openapi-cli.ts",
    "workflow:api": "ts-node packages/scripts/src/workflow-api-server.ts",
    "deployment:api": "ts-node packages/scripts/src/deployment-api-server.ts",
    "performance:api": "ts-node packages/scripts/src/performance-dashboard-server.ts",
    "convex:dev": "npx convex dev",
    "convex:deploy": "npx convex deploy",
    "convex:logs": "npx convex logs",
    "convex:env": "npx convex env",
    "convex:verify": "ts-node packages/scripts/src/verify-convex.ts",
    "demo": "node packages/scripts/src/demo.ts",
    "demo:full": "node packages/scripts/src/demo-full.ts",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "commit": "git-cz",
    "release": "changeset publish",
    "version": "changeset version"
  },
  "dependencies": {
    "convex": "^1.28.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@playwright/test": "^1.40.0",
    "@types/node": "^22.10.2",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "turbo": "^2.1.0",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": ["biome format --write", "biome lint --apply"],
    "*.{json,md,yml,yaml}": ["prettier --write"],
    "*.astro": ["prettier --write"]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
